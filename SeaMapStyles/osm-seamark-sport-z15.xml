<?xml version='1.0' encoding='UTF-8'?>
<?xml-stylesheet type="text/xsl" href="osmarender.xsl"?>


<!-- OpenSeaMap-Sport Rules File for zoom level 15 -->

<rules 
	data="../work/data.osm"
	scale="0.291271"
	symbolScale="0.032"
	minimumMapWidth="0.5"
	minimumMapHeight="0.5"
	showScale="no"
	showGrid="no"
	showBorder="no"
	showLicense="no"
	showZoomControls="no"
	symbolsDir="../SeaMapSymbols"
	meter2pixel="0.1375">
  
	<rule e="way" k="sport" v="*">
    <area class="sport-area" layer="-5"/>
  </rule>
  
	<rule e="node|way" k="sport" v="scuba_diving">
		<symbol ref="scuba_diving" position="center"/>
		<text k ='name' class ='poi-name' dy = '-1' dx = '3'/>
	</rule>
  
	<defs>
		<style type="text/css" xmlns="http://www.w3.org/2000/svg">
      
			.map-background { fill: #b5d0d0; fill-opacity: 0; stroke: none; }
      
			.sport-area { fill: #bde3cb; stroke: #6fc18e; stroke-width: 2.0px; }
      
			.area-name { font-family: "Arial"; font-weight: bold; font-size: 1.4px; text-anchor: middle; }
      
			.poi-name { font-size: 1.4px; font-family: "Arial"; font-weight: bold; }
      
		</style>
	</defs>
</rules>